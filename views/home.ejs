<%- include('partials/header') -%>

<h1 class="hello_name"><%= pageTitle %> <%= name %></h1>

<div class="tabs">
    <button class="tab" id="mine" >My Posts</button>
    <button class="tab" id="others">Community Posts</button>
</div>

<div id="myPosts" class="tabContent">
    <ul class="home_ul">
        <% for (let i = 0; i < posts.length; i++) { %>
            <a class="link_posts" style="text-decoration: none;" href="/posts/<%= posts[i].title %>">
                <li class="post">
                    <h3 id="title"><%= posts[i].title %></h3>
                    <h5>By- <%=posts[i].username %></h5>
                    <p class="home_content"><%= posts[i].content.substring(0, 120) + "..." %></p>
                    <p><%= posts[i].react %></p>
                </li>
            </a>
        <% } %>
    </ul>
</div>

<div id="communityPosts" class="tabContent">
    <!-- Display community posts here -->
    <!-- You can customize this section with community content -->
</div>

<%- include('partials/footer') -%>
